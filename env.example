# Environment Configuration
NODE_ENV=development
BASE_URL=http://localhost:3000

# AI Configuration
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
AI_MODEL=gemini-1.5-flash
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Test Configuration
TEST_TIMEOUT=30000
RETRY_ATTEMPTS=3
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_RETRY=true

# Visual Testing
VISUAL_THRESHOLD=0.2
VISUAL_UPDATE_SNAPSHOTS=false
VISUAL_IGNORE_ANTI_ALIASING=true

# Flaky Test Detection
FLAKY_DETECTION_ENABLED=true
FLAKY_TEST_THRESHOLD=0.3
FLAKY_RETRY_COUNT=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/automation.log

# Test Users (Customize for your application)
MANAGER_USER_EMAIL=manager@example.com
MANAGER_USER_PASSWORD=ManagerPassword123!
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=AdminPassword123!

